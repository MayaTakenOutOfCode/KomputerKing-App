<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="171dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/vivid_media" />

        <!-- Header -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/loginTextRegisterHeader"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Login Label -->
        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/loginTextLogin"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textFontWeight="600" />

        <!-- Login EditText -->
        <EditText
            android:id="@+id/editTextLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="text" />

        <!-- Reopeat Password Label -->
        <TextView
            android:id="@+id/passwordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/loginTextPassword"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textFontWeight="600" />

        <!-- Password EditText -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textPassword" />
        <!-- Password Label -->
        <TextView
            android:id="@+id/passwordRepeatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/loginTextRepeatPassword"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textFontWeight="600" />

        <!-- Password EditText -->
        <EditText
            android:id="@+id/editTextRepeatPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_login_register"
            android:padding="5dp"
            android:text="@string/loginButtonRegisterText"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/loginTextSize"
            android:textStyle="bold"
            android:onClick="onRegisterClick"
            app:backgroundTint="@null"/>

        <!-- Footer -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:text="@string/copyrightText"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textFontWeight="100"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>