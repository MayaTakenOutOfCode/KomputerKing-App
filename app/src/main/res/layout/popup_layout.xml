<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/popup_background"
    android:gravity="center"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popUpSettingsName"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/button_themes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popUpSettingsMode"
        android:background="@drawable/rounded_button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popUpSettingsLanguage"
        android:background="@drawable/rounded_button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popUpSettingsTextSize"
        android:background="@drawable/rounded_button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button_back"
        android:background="@drawable/rounded_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popUpExitName"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:padding="5dp" />

</LinearLayout>
